<div class="modal-body">
    
    <?php if ($this->items): ?>
    
        <table class="table table-striped">
        <thead>
        <tr>
            <th>Student</th>
            <th>Item</th>
            <th>Qty</th>
        </tr>
        </thead>
        <tbody>
        <?php foreach ($this->items as $item): ?>
        <tr>
            <td><?php echo $item->Student ? $this->escape($item->Student) : 'N/A'; ?></td>
            <td><?php echo $item->ItemDescription ? $this->escape($item->ItemDescription) : 'N/A'; ?></td>
            <td><?php echo $item->Quantity ? $this->escape($item->Quantity) : 'N/A'; ?></td>
        </tr>
